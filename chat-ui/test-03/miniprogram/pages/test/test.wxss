page {
  height: 100vh;
}

.body{
  height: 100%;
  width: 100%;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  background-color: rgb(8, 8, 8,0.5);
  /* opacity: 0.4; */
  flex-direction: column;
}

.voice{
  height: 100px;
  width: 200px;
  background-color: rgb(252, 2, 2);
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 50%;
  transition: 0.5s;
}

.voice view{
  width: 5px;
  height: 5px;
  background-color: white;
  border-radius: 30px;
  margin: 0 3px;
}

@keyframes g1 {
  0% {
    height: 5px;
    /* transform: translateY(0px); */
  }
  100% {
    height: 20px;
    /* transform: translateY(5px); */
  }
}

@keyframes g2 {
  0% {
    height: 5px;
    /* transform: translateY(0px); */
  }
  100% {
    height: 15px;
    /* transform: translateY(5px); */
  }
}

@keyframes g3 {
  0% {
    height: 5px;
    /* transform: translateY(0px); */
  }
  100% {
    height: 10px;
    /* transform: translateY(5px); */
  }
}

.voice view {
  animation-name: g3;
  animation-duration: 0.5s;
  /* animation-delay: 0.5s; */
  animation-iteration-count: infinite;
  animation-direction: alternate;
  animation-timing-function: ease-in-out;
}


.stop {
  width: 60px;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30px;
  background-color: rgb(182, 177, 177);
  position: absolute;
  bottom: 150px;
  /* margin-bottom: 20%; */
  
}

.stop image{
  width: 40px;
  height: 40px;
}

/* .stop:hover{
  background-color: rgb(40, 247, 21);
} */

.start {
  position: absolute;
  width: 100%;
  height: 100px;
  border-radius: 100% 100% 0 0;
  /* clip-path: polygon(0 100%, 50% 0, 100% 100%); */
  background-color: rgb(97, 89, 89);
  /* background-color: rgb(252, 2, 2); */
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: 0.5s;
}

.start image{
  width: 50px;
  height: 50px;
}

.start text{
  position: absolute;
  bottom: 130px;
  color: rgb(212, 207, 207);
}

