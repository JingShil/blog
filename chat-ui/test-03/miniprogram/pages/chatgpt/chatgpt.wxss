page {
  height: 100vh;
}

.body{
  height: 100%;
  width: 100%;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  background-color: rgba(95, 91, 91, 0.5);
  /* opacity: 0.4; */
  flex-direction: column;
  position: absolute;
  z-index: 5;

}

.voice{
  height: 100px;
  width: 200px;
  background-color: rgb(252, 2, 2);
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 50%;
  transition: 0.5s;
}

.voice view{
  width: 5px;
  height: 5px;
  background-color: white;
  border-radius: 30px;
  margin: 0 3px;
}

@keyframes g1 {
  0% {
    height: 5px;
    /* transform: translateY(0px); */
  }
  100% {
    height: 20px;
    /* transform: translateY(5px); */
  }
}

@keyframes g2 {
  0% {
    height: 5px;
    /* transform: translateY(0px); */
  }
  100% {
    height: 15px;
    /* transform: translateY(5px); */
  }
}

@keyframes g3 {
  0% {
    height: 5px;
    /* transform: translateY(0px); */
  }
  100% {
    height: 10px;
    /* transform: translateY(5px); */
  }
}

.voice view {
  animation-name: g3;
  animation-duration: 0.5s;
  /* animation-delay: 0.5s; */
  animation-iteration-count: infinite;
  animation-direction: alternate;
  animation-timing-function: ease-in-out;
}


.stop {
  width: 60px;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30px;
  background-color: rgb(219, 206, 206);
  position: absolute;
  bottom: 150px;
  /* margin-bottom: 20%; */
  
}

.stop image{
  width: 40px;
  height: 40px;
}

/* .stop:hover{
  background-color: rgb(40, 247, 21);
} */

.start {
  position: absolute;
  width: 100%;
  height: 100px;
  border-radius: 100% 100% 0 0;
  /* clip-path: polygon(0 100%, 50% 0, 100% 100%); */
  background-color: rgb(185, 182, 182);
  /* background-color: rgb(252, 2, 2); */
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: 0.5s;
}

.start image{
  width: 50px;
  height: 50px;
}

.start text{
  position: absolute;
  bottom: 130px;
  color: rgb(212, 207, 207);
}
/* .start:hover{
  background-color: white;
} */

.option{
  height: 100px;
  width: 80%;
  /* background-color: aquamarine; */
  position: absolute;
  bottom: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.option view{
  height: 60px;
  width: 60px;
  border-radius: 30px;
  background-color: rgb(161, 167, 161);
  /* background-color: white; */
  display: flex;
  justify-content: center;
  align-items: center;
}
.option text{
  position: absolute;
  bottom: 100px;
  color: rgb(212, 207, 207);
}

.option image{
  height: 30px;
  width: 30px;
}

@keyframes g1 {
  0% {
    height: 10px;
    /* transform: translateY(0px); */
  }
  33%{
    height: 10px;
  }
  66% {
    height: 3px;
    /* transform: translateY(5px); */
  }
  100%{
    height: 10px;
  }
}

@keyframes g2 {
  0% {
    height: 15px;
    /* transform: translateY(0px); */
  }
  33%{
    height: 3px;
  }
  66% {
    height: 3px;
    /* transform: translateY(5px); */
  }
  100%{
    height: 15px;
  }
}

.audio {
  display: flex;
  align-items: center;
}

.audio view{
  width: 2.5px;
  background-color: rgb(82, 81, 81);
  border-radius: 30px;
  margin-left: 3px;
  animation-iteration-count: infinite;
  animation-direction: alternate;
  animation-timing-function: ease-in-out;
}

.audio view:nth-child(1){
  height: 3px;
  animation-duration: 0.5s;
}

.audio view:nth-child(2){
  height: 10px;
  /* animation-name: g1;
  animation-duration: 1s; */
}

.audio view:nth-child(3){
  height: 15px;
  /* animation-name: g2;
  animation-duration: 1s; */
}

.aui1{
  animation-name: g1;
  animation-duration: 2s;
}

.aui2{
  animation-name: g2;
  animation-duration: 2s;
  
}




